    <style>
      body {
        background-color: #27165D;
      }

      .container {
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -64.5px;
        margin-top: -85.5px;
      }

      .ghost {
        animation: float 3s ease-out infinite;
      }

      @keyframes float {
        50% {
          transform: translate(0, 20px);
        }
      }
      .shadowFrame {
        width: 130px;
        margin-top: 15px;
      }
      .shadow {
        animation: shrink 3s ease-out infinite;
        transform-origin: center center;
      }
      .shadow .ellipse {
          transform-origin: center center;
      }

      @keyframes shrink {
        0% {
          width: 90%;
          margin: 0 5%;
        }
        50% {
          width: 60%;
          margin: 0 18%;
        }
        100% {
          width: 90%;
          margin: 0 5%;
        }
      }

      .card{
        perspective: 100px;
        transform-style: preserve-3d;
      }

      .card-item {
        transition: transform .2s;
      }

      .card-item > img {
        height: 100%;
        width: 100%;
        max-width: 100%;
      }

      .ghost:hover {
        cursor: pointer;
      }

    </style>
  </head>

  <body>
      <div class="container">
        <div class="card">
          <div class="card-item">
